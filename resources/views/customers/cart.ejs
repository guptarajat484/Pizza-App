<section class="cart py-8">
    <% if(session.cart){%>
        <div class="order container mx-auto w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="img/cart-black.png">
                <h1 class="font-bold text-2xl ml-4">Order Summary</h1>
            </div>
            <div>
                <% for(let piz of Object.values(session.cart.items)){ %>
                    <div class="flex items-center">
                        <img src="img/pizza.jpg" class="w-24 mt-8 ">
                        <div class="ml-4 flex-1">
                            <h1 class="font-bold text-2xl ">
                                <%=piz.item.name%>
                            </h1>
                            <span>
                                <%=piz.item.size%>
                            </span>
                        </div>
                        <span class="flex-1 font-bold">
                            <%=piz.qty%>
                        </span>
                        <span class="font-bold text-lg">₹<%=piz.qty * piz.item.price%></span>
                    </div>
                    <%}%>
                        <hr class="my-4">
                        <div class="text-right ">
                            <span class="font-bold pr-4 text-lg">
                                Total Amount:
                            </span>
                            <span class="amount font-bold text-2xl">₹<%=session.cart.totalprice%>
                            </span>
                            <%if(user){%>
                                <div>
                                    <form class="mt-12" action="/orders" method="POST">
                                        <input type="text" placeholder="Phone No" name="phone"
                                            class="border border-grey-400 p-2 w-1/2 my-2">
                                        <input type="text" placeholder="Address" name="address"
                                            class="border border-grey-400 p-2 w-1/2 my-4">
                                        <div>
                                            <button type="submit"
                                                class=" home-button text-white px-6 py-2 font-bold rounded-full text-lg">Order
                                                Now</button>
                                        </div>
                                    </form>
                                </div>
                                <%} else{%>
                                    <a href="/login"
                                        class="inline-block cursor-pointer home-button text-white px-6 py-2 font-bold rounded-full text-lg">Login
                                        to continue </a>
                                    <%}%>
                        </div>

            </div>
        </div>
        <% } else{%>

            <div class="container mx-auto  text-center my-6">
                <h1 class="text-3xl text-bold text-center mb-4">Cart Empty</h1>
                <p class="text-lg text-center text-gray-500 mb-12">You probably haven't order pizza yet.<br>
                    To order pizza, go to main page</p>
                <img class="w-2/5 mx-auto mb-6 " src="img/empty-cart.jpg">
                <a href="/" class=" inline-block px-6 py-2 rounded-full text-white col font-bold ">Go To Home</a>
            </div>
            <% }%>
</section>